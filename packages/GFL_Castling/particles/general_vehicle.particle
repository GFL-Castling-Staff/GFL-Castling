particle_system ct_vehicle_tire_smoke
{
	quota 500
	particle_width 0.2
	particle_height 0.2
	renderer billboard
	billboard_type point
	billboard_origin center
	billboard_rotation_type vertex
	common_direction 0 1 0
	common_up_vector 0 0 1
	iteration_interval 0
	
	emitter Point
	{
		angle 50
		colour 1 1 1 0
		direction 1 0 0
		emission_rate 10
		position 0 0 0
		velocity_min 0.1
		velocity_max 1
		time_to_live 2
		duration 0.1
	}

	affector Scaler
	{
		rate 2
	}

	affector Rotator
	{
		rotation_speed_range_start	-45
		rotation_speed_range_end	45
		rotation_range_start	-30
		rotation_range_end	30
	}

	affector ColourInterpolator
	{
		time0 0
		colour0 0.8 0.8 0.8 0.4
		time1 0.7
		colour1 0.8 0.8 0.8 0.05
		time2 1
		colour2 1 1 1 0
	}

	affector LinearForce{
		force_vector 0 0.5 0
		force_application add
	}
}

