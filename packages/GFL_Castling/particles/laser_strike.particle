	emitter Ring
	{
		angle 0
		colour 0 0 0 0
		direction 0 1 0
		emission_rate 70
		position 0 0 0
		velocity 0.0001
		time_to_live 2.5
		duration 0.1
        depth 0.1
        height 5
        width 5
        inner_height 0.1
        inner_width 0.1
	}
	affector Scaler
	{
		rate 1
	}
	affector ColourInterpolator
	{
		time0 0
		colour0 1 1 1 0.1
