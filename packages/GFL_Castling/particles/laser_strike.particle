particle_system ppk_laser_strike_result_smoke
{
	quota 1000
	material wand_smoke
	particle_width 2.5
	particle_height 2.5
	renderer billboard
	billboard_type point
	billboard_origin center
	billboard_rotation_type vertex
	common_direction 0 1 0
	common_up_vector 0 0 1
